    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run controller (arena 51x39, bot 44x84, aruco 19,3)",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "controller/run.py",
            "args": [
                "510",
                "390",
                "44",
                "84",
                "19",
                "3"
            ]
        },
        {
            "name": "Blender render 1 image",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "blender",
            "args": [
            "~/Documents/Blender/battlebot-arena.blend",
            "--background",
            "--python",
            "render_script.py"
            ]
        }
    ]
}